<Window x:Class="Clients.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clients"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        ThemeMode="System">
    <UniformGrid>
        <StackPanel>
            <TextBox Text="{Binding Client1TextBlock}" />
            <Button Content="Send Message"
                    Command="{Binding SendMessageCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" />
            <TextBlock Text="Sending..."
                       Visibility="{Binding IsSending, UpdateSourceTrigger=PropertyChanged}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Button Content="Listen/Stop listening"
                    Command="{Binding ToggleListening}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" />
            <ListView ItemsSource="{Binding MessagesList}"
                      ScrollViewer.CanContentScroll="True"></ListView>
        </StackPanel>
    </UniformGrid>
</Window>
