<Window x:Class="Clients.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clients"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        ThemeMode="System">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <TextBox Text="{Binding Client1TextBlock}"
                     Margin="0 0 10 0"
                     Padding="5" 
                     Width="300"/>
            <Button Content="Send Message"
                    Command="{Binding SendMessageCommand}"
                    Padding="10"
                    BorderThickness="0"
                    Cursor="Hand" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Padding="10"
                    CornerRadius="5"
                    Margin="0 10 10 0">
                <StackPanel>
                    <TextBlock Text="Messages"
                               FontWeight="Bold"
                               Margin="0 0 0 5" />
                    <ListBox ItemsSource="{Binding MessagesList}"
                             BorderThickness="1" />
                </StackPanel>
            </Border>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Status"
                           FontWeight="Bold"
                           Margin="0 0 0 5" />
                <TextBlock Text="Sending..."
                           Visibility="{Binding IsSending, UpdateSourceTrigger=PropertyChanged}"
                           HorizontalAlignment="Center" />
                <Button Content="listen socket"
                        Command="{Binding Listen}"
                        Padding="10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0 10 0 10" />
                <Button Content="Get Last 10 Min Messages"
                        Command="{Binding GetLastMessages}"
                        Padding="10"
                        BorderThickness="0"
                        Cursor="Hand" />
                <ListView ItemsSource="{Binding LastMessages}"
                          Margin="0 10 0 0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
